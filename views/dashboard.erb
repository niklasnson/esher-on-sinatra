<form class="form-inline" method="post" action="/dashboard/add-symptom">
    <label class="mr-sm-2" for="inlineFormCustomSelect">It</label>
    <select name="feel" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormFeels">
        <option selected>Feels...</option>
        <% avail_symp.each_with_index do |feel, index| %>
        <option value="<%=index %>"><%= feel %></option>
        <% end %>
    </select>

    <label class="mr-sm-2" for="inlineFormCustomSelect">in my</label>
    <select name="part" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormBodypart">
        <option selected>Bodypart...</option>
        <% avail_parts.each_with_index do |part, index| %>
        <option value="<%=index %>"><%= part %></option>
        <% end %>
    </select>

    <label class="mr-sm-2" for="inlineFormCustomSelect"> when </label>
    <select name="action" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormWhen">
        <option selected>When...</option>
        <% avail_actions.each_with_index do |action, index| %>
        <option value="<%=index %>"><%= action %></option>
        <% end %>
    </select>

    <label class="mr-sm-2" for="inlineFormCustomSelect"> at </label>
    <select name="time" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormTime">
        <option selected>Time...</option>
        <% avail_times.each_with_index do |time, index| %>
        <option value="<%=index %>"><%= time %></option>
        <% end %>
    </select>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

